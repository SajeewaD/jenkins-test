#!/usr/bin/env groovy

pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                sleep 5
            }
        }
        stage('Smoke Test') {
            steps {
                echo 'Testing..'
                sleep 7
            }
        }
        stage('Full Test') {
            steps {
                echo 'Testing..'
                sleep 10
            }
        }
        stage('Package') {
            steps {
                echo 'Deploying....'
                sleep 5
            }
        }
    }
}
